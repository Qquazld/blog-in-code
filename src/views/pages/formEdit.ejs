<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <header><%- include('../partials/header'); %></header>
  <body>
    <main>
      <div class="form__container">
        <form
          action="/posts/<%= post.id %>?_method=PATCH"
          method="POST"
          enctype="multipart/form-data"
          class="form"
        >
          <h1 class="form__title show__post--title">Edit Post</h1>
          <div class="form__group">
            <label for="title">Title:</label>
            <input
              type="text"
              id="title"
              name="title"
              value="<%= post.title %>"
              class="form__input"
            />
          </div>
          <div class="form__group">
            <label for="content">Content:</label>
            <textarea
              id="content"
              name="content"
              rows="10"
              class="form__textarea"
              required
            >
<%= post.content %></textarea
            >
          </div>
          <div class="form__group">
            <label for="image">Image:</label>
            <input
              type="file"
              id="image"
              name="image"
              accept="image/*"
              class="form__input"
            />
          </div>
          <div class="form__btns">
            <button type="submit" class="btn form__submit">Save Changes</button>
            <button
              type="button"
              class="btn form__cancel"
              onclick="window.history.back()"
            >
              Cancel
            </button>
          </div>
        </form>
      </div>
    </main>
    <footer><%- include('../partials/footer'); %></footer>
  </body>
</html>
